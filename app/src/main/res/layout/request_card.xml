<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/top_card"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop = "10dp"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="#FAA5A5"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/card_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="5 min away"
            android:textColor="#FFFFFF"
            android:textSize="36px"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView


        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="-45dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/product_icon"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/tampon" />
                <TextView
                    android:id="@+id/card_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="TAMPONS  |  3 min ago"
                    android:textColor="#F18686"
                    android:textSize="48px"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/card_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins"
                android:text="Iâ€™ll be right outside the door of Subway holding a Starbucks frappuccino..."
                android:textColor="#2A2A2A"
                android:textFontWeight="500"
                android:textSize="36px" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/acceptbtn"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:maxWidth="60dp"
                    android:textColor="#FFFFFF"
                    android:padding="5dp"
                    android:text="ACCEPT"
                    android:shadowColor="@color/fui_transparent"
                    style="?android:attr/borderlessButtonStyle"
                />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/rejectbtn"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:maxWidth="60dp"
                    android:textColor="#B5B5B5"
                    android:padding="5dp"
                    android:text="DELETE"
                    android:shadowColor="#00000000"
                    style="?android:attr/borderlessButtonStyle"
                    />


            </LinearLayout>
        </LinearLayout>




        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="ACCEPT"
                android:fontFamily="@font/poppins"
                android:textColor="#FFFFFF"
                android:background="@drawable/acceptbtn"
                />
        </LinearLayout> -->




    </android.support.v7.widget.CardView>

</LinearLayout>