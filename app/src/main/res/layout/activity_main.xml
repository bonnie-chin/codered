<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblob"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/chivo"
        android:text="Requests Near You"
        android:textColor="#F18686"
        android:textSize="72px"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card2top"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="110dp"
                app:cardBackgroundColor="#F18686"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/timeaway2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="3 min away"
                    android:textColor="#FFFFFF"
                    android:textSize="42px"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="285dp"
                android:layout_height="135dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-45dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="PAINKILLERS  |  30 sec ago"
                    android:textColor="#F18686"
                    android:textSize="48px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="Anyone with Tylenol Extra Strength? I can’t use Advil or any prescriptions."
                    android:textColor="#2A2A2A"
                    android:textFontWeight="500"
                    android:textSize="36px" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/pill" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card2top"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#FAA5A5"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/timeaway2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="5 min away"
                    android:textColor="#FFFFFF"
                    android:textSize="42px"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="285dp"
                android:layout_height="135dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-45dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="TAMPONS  |  3 min ago"
                    android:textColor="#F18686"
                    android:textSize="48px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="I’ll be right outside the door of Subway holding a Starbucks frappuccino..."
                    android:textColor="#2A2A2A"
                    android:textFontWeight="500"
                    android:textSize="36px" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/tampon" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#fcb1b1"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/timeaway1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="6 min away"
                    android:textColor="#FFFFFF"
                    android:textSize="42px"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="285dp"
                android:layout_height="135dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-45dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="PADS  |  2 min ago"
                    android:textColor="#F18686"
                    android:textSize="48px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="Any heavy flow sanitary napkin you have would help, doesn't matter to me!"
                    android:textColor="#2A2A2A"
                    android:textFontWeight="500"
                    android:textSize="36px" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/pad" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2top"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#FABEBE"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/timeaway2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="6 min away"
                    android:textColor="#FFFFFF"
                    android:textSize="42px"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="285dp"
                android:layout_height="135dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-45dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="HEATING PAD  |  4 min ago"
                    android:textColor="#F18686"
                    android:textSize="48px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="A small, discrete heating pad would be greatly appreciated!"
                    android:textColor="#2A2A2A"
                    android:textFontWeight="500"
                    android:textSize="36px" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/heating_pad" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card2top"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#F9CECE"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/timeaway2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="8 min away"
                    android:textColor="#FFFFFF"
                    android:textSize="42px"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="285dp"
                android:layout_height="135dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-45dp"
                android:layout_marginBottom="100dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins"
                    android:text="TAMPONS  |  3 min ago"
                    android:textColor="#F18686"
                    android:textSize="48px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="Light flow tampon please! Thanks in advance."
                    android:textColor="#2A2A2A"
                    android:textFontWeight="500"
                    android:textSize="36px" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/tampon" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemTextColor="#F18686"
        app:itemIconTint="#F18686"
        app:menu="@menu/navigation" />

    <Button
        android:id="@+id/request_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/reqbutton"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
