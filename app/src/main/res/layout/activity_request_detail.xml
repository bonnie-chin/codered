<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetailActivity"
    android:background="@drawable/backgroundblob">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/chivo"
                android:text="Request Details"
                android:textColor="#F18686"
                android:textSize="72px"
                android:textStyle="bold"/>

            <!--product-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/chivo"
                android:text="PRODUCT"
                android:textColor="#F18686"
                android:textSize="48px"
                android:textStyle="bold"/>
            <View
                android:layout_width="85dp"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:background="#F18686"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/read_icon"
                    android:layout_width="28dp"
                    android:layout_height="37dp"
                    android:src="@drawable/pill" />
                <TextView
                    android:id="@+id/read_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:text="Painkillers"
                    android:textColor="#F18686"
                    android:textSize="42px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <!--location-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/chivo"
                android:text="LOCATION"
                android:textColor="#F18686"
                android:textSize="48px"
                android:textStyle="bold"/>

            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:background="#F18686"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:src="@drawable/time_away" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:text="3 minutes away"
                    android:textColor="#F18686"
                    android:textSize="42px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="9dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:src="@drawable/address" />
                <TextView
                    android:id="@+id/read_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:text="256 Auburn Crescent"
                    android:textColor="#F18686"
                    android:textSize="42px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--description-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/chivo"
                android:text="DESCRIPTION"
                android:textColor="#F18686"
                android:textSize="48px"
                android:textStyle="bold"/>

            <View
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:background="#F18686"
                />
            <TextView
                android:id="@+id/read_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Anyone with Tylenol Extra Strength? I canâ€™t use Advil or any prescription painkillers."
                android:layout_marginTop="15dp"
                android:textColor="#2A2A2A"
                android:textSize="40px"
                android:fontFamily="@font/poppins"/>

            <!--codeword-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/chivo"
                android:text="CODE WORD"
                android:textColor="#F18686"
                android:textSize="48px"
                android:textStyle="bold"/>

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:background="#F18686"
                />
            <TextView
                android:id="@+id/read_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:textColor="#F18686"
                android:textSize="40px"
                android:text="Crunchy Bananas"
                android:padding="15dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/border"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:text="NAVIGATE"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/buttonstuff"

                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>