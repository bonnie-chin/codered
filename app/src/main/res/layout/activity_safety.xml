<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SafetyActivity"
    android:background="@drawable/bgtwo">

    <!-- Information card on how to stay safe while using codeRED -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#396BE2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/my_image_button"
                    android:layout_marginTop="30dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/close"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"/>


                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/chivo"
                    android:text="How to Stay Safe while Using codeRED"
                    android:textColor="#FFFFFF"
                    android:textSize="72px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/chivo"
                    android:text="1. Don’t disclose any personal
                       information"
                    android:textColor="#FFFFFF"
                    android:textSize="48px"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="Keep your name, phone number or any other personal details confidential."
                        android:textColor="#FFFFFF"
                        android:textSize="36px" />

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="103dp"
                        android:layout_marginLeft="20dp"
                        android:paddingTop="20dp"
                        android:src="@drawable/safe1" />
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:background="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/chivo"
                    android:text="2. Meet in Public Spaces"
                    android:textColor="#FFFFFF"
                    android:textSize="48px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="164dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"

                        android:fontFamily="@font/poppins"
                        android:text="This ensures that if anything goes wrong, someone will be able to help."
                        android:textColor="#FFFFFF"
                        android:textSize="36px" />
                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="103dp"
                        android:paddingTop="20dp"
                        android:src="@drawable/safe2" />
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:background="#FFFFFF" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/chivo"
                    android:text="3. Use the Codeword"
                    android:textColor="#FFFFFF"
                    android:textSize="48px"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="176dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="If your deliverer makes you feel unsafe, pretend you don’t understand the codeword and leave. \n \nIf you are unsure if it’s your deliverer approaching, ask for the codeword to confirm."
                            android:textColor="#FFFFFF"
                            android:textSize="36px" />


                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/safe3" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
